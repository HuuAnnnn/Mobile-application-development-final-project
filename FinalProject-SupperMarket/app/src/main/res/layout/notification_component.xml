<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/border_curve_card_four_coners"
    android:backgroundTint="#BED9D9D9"
    android:padding="5dp"
    android:weightSum="3">

    <ImageView
        android:id="@+id/displayNotificationImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="6dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/mockup_product_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/displayNotificationTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_bold"
            android:gravity="center_vertical"
            android:text="Cá hồi"
            android:textColor="#000000"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/displayNotificationDateCreate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_vertical"
                android:text="00/00/00 00:00:00"
                android:textColor="#878787"
                android:textSize="9sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/displayNotificationContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_vertical"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis accumsan dui in nulla fringilla ornare. Nulla sed fringilla eros. Vestibulum suscipit id tortor feugiat rutrum. Sed risus purus, convallis eget faucibus ut, aliquet et lectus."
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>