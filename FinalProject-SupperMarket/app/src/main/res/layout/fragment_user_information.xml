<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="731dp"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="269dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgvAvatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="0"
                android:clickable="true"
                android:src="@android:mipmap/sym_def_app_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvInforusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:text="Tên"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvInforfullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số dư: "
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:text="Thông tin cá nhân"
                    android:clickable="true"
                    android:textColor="#023047" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvHistoryList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_receipt_long_24"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:text="Lịch sử giao dịch"
                    android:textColor="#023047" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvChangePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_checklist_24"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:text="Thay đổi mật khẩu"
                    android:clickable="true"
                    android:textColor="#023047" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_public_32"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:text="Điều khoản sử dụng"
                    android:textColor="#023047" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_info_24"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:text="Về chúng tôi"
                    android:textColor="#023047" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnSignOut"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_baseline_logout_24"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center_vertical"
                    android:text="Đăng xuất"
                    android:textColor="#023047" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>