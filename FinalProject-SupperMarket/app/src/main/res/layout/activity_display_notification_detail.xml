<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".DisplayNotificationDetail">

    <ImageButton
        android:id="@+id/btnNotificationBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_color"
        android:fontFamily="@font/inter_bold"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/banner__1_" />

    <TextView
        android:id="@+id/displayTile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_bold"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/displayDateCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/inter_medium"
        android:text="00/00/00 00:00:00"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/displayContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/inter_medium"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis accumsan dui in nulla fringilla ornare. Nulla sed fringilla eros. Vestibulum suscipit id tortor feugiat rutrum. Sed risus purus, convallis eget faucibus ut, aliquet et lectus."
        android:textSize="13sp" />
</LinearLayout>